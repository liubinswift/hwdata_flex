<!--- The default skin class for a Spark TitleWindow container.  

     @see spark.skins.spark.TitleWindowCloseButtonSkin
     @see spark.components.TitleWindow

     @langversion 3.0
     @playerversion Flash 10
     @playerversion AIR 1.5
     @productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009" blendMode="normal" mouseEnabled="false"
    minWidth="76" minHeight="76" alpha.disabled="0.5" alpha.disabledWithControlBar="0.5" xmlns:contaners="com.morcha4.ui.contaners.*" xmlns:button="com.morcha4.ui.button.*">
    
    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.TitleWindow")]
        ]]>
    </fx:Metadata> 
    
    <s:states>
        <s:State name="normal" />
        <s:State name="inactive" stateGroups="inactiveGroup" />
        <s:State name="disabled" />
        <s:State name="normalWithControlBar" stateGroups="withControls" />
        <s:State name="inactiveWithControlBar" stateGroups="withControls, inactiveGroup" />
        <s:State name="disabledWithControlBar" stateGroups="withControls" />
    </s:states>
	
	
    <contaners:BorderContainer id="border" left="0" right="0" top="0" bottom="0">
		<!--s:BitmapImage source="{getStyle('contentSrc')}" fillMode="repeat" width="100%" height="100%"/-->
		<s:Group id="contentGroup" minWidth="0" minHeight="0" top="0" bottom="0" left="0" right="0">
		</s:Group>
	</contaners:BorderContainer>
	<s:Label id="titleDisplay" maxDisplayedLines="1"  top="1"
			 left="9" right="36" minHeight="38" color="0x000000"
			 verticalAlign="middle" fontWeight="bold" />
	<button:IconButton id="closeButton" right="{getStyle('closeButtonRightOff')}" top="{getStyle('closeButtonTopOff')}"
					   source="{getStyle('closeButtonSrc')}"/>
</s:SparkSkin>
