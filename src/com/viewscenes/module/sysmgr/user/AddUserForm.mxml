//					list.addItem(o);
//					
//				}
//				asObj.list = list;
				
				RPCManager.sendCmd(new RORequestParam("com.viewscenes.web.sysmgr.user.PubUserManager","addUserCust",asObj,_addUserCust,onFault));
			}
			
			private function _addUserCust(arr:ArrayCollection):void{
				MM.show("设置成功");
				close(null);
			}
			
			private function close(e:Event):void{
				//dispatchEvent(new AdvancedEvent("userListRefresh",true,false,null));
				PopUpManager.removePopUp(this);
				
			}
			
			private function validPsw():Boolean{
				
				if (password.text== "" || password2.text == ""){
					pswMark.text='密码不能为空';
					//password.setStyle('borderColor','0xff0000');
					
					return false
				}
				
				if (password.text == password2.text){
					password.setStyle('borderColor','6908265');
					pswMark.text='';
				}else{
					password.setStyle('borderColor','0xff0000');
					pswMark.text='两次输入的密码不一致';
					return false;
				}
				
//				if(userCode.text == ""){
//					codeMark.text = "用户代码不能为空";
//					return false;
//				}else{
//					codeMark.text ="";
//				}
				if(userName.text == ""){
					nameMark.text = "用户名不能为空";
					return false;
				}else{
					nameMark.text = "";
				}
				
				return true;
			}
			
			public function getFuncTreeByRoleId():void{
				
				RPCManager.sendCmd(new RORequestParam("com.viewscenes.web.sysmgr.user.PubUserManager","getFuncTreeByRoleId",roleObj,_getFuncTreeByRoleId,_getFuncTreeByRoleId));
			}
			
			private function _getFuncTreeByRoleId(arr:ArrayCollection):void{
				
				
				var retXml:XML = new XML(arr[0]);
				
				for each(var x:XML in retXml.tree){
					treeXML =x.node;
				}
			}
			
			
		]]>
	</fx:Script>
	<fx:Declarations>
